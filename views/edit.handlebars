<div class="card dashboard-card">
    <div class="card-header">
        <h2 style="text-align:center;">Edit Post</h2>
        <p style="text-align:center;">Something come to mind? Add it into your post! <p style="font-size:12px; text-align:center;">Or you may delete your post from here</p></p>
    </div>
    <div class="card-body content-card">
        <input type="hidden" name="post-id" value="{{post.id}}" id="postid" />
        <div class="form-group">
            <label class="form-label" for="title">Title:</label>
            <input type="text" name="title" id="title" value="{{post.title}}" class="col-sm-12 form-input" />
        </div>
        <div class="form-group">
            <label class="form-label" for="content">Content:</label>
            <textarea type="text" name="content" class="col-sm-12 form-input" id="content">{{post.content}}</textarea>
        </div>
        <button type="submit" class="btn btn-dark" id="updatebtn">Update</button>

        <button type="button" id="deletebtn" class="btn btn-dark">Delete</button>
    </div>
</div>

<script src="/js/edit.js"></script>